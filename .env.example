# .env.example - Environment configuration template

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# Database Configuration
DATABASE_URL=postgresql://attendance_user:attendance_pass@127.0.0.1/ai_attendance

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here

# Redis Configuration
REDIS_URL=redis://127.0.0.1:6379/0

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@school.edu

# Twilio Configuration (for SMS)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# Session Configuration
SESSION_TYPE=redis
SESSION_REDIS=redis://localhost:6379/0
PERMANENT_SESSION_LIFETIME=86400

# Rate Limiting
RATELIMIT_DEFAULT=100 per hour
RATELIMIT_STORAGE_URL=redis://localhost:6379/0

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=data/uploads

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Security
BCRYPT_ROUNDS=12

# Performance
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://localhost:6379/0
CACHE_DEFAULT_TIMEOUT=300

# Attendance Configuration
ATTENDANCE_PRESENT_WINDOW_MINUTES=5
ATTENDANCE_LATE_WINDOW_MINUTES=15
ATTENDANCE_CONFIDENCE_THRESHOLD=0.7
ATTENDANCE_LIVENESS_THRESHOLD=0.6